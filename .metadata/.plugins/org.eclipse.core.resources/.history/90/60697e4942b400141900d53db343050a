package mailFX;

import java.io.IOException;

import mailFX.Controller.FXErrorController;
import javafx.fxml.FXMLLoader;
import javafx.scene.Parent;
import javafx.scene.Scene;
import javafx.stage.Stage;
import mailFX.Controller.FXGUIController;

public class FXError {
	public FXError(Stage primaryStage, String windowTitle, String message, String details) throws IOException{        
        FXMLLoader loader = new FXMLLoader(FXErrorController.class.getResource("/mailFX/Controller/error.fxml"));
        Parent root = (Parent)loader.load();
        
        Scene scene = new Scene(root);
        scene.getStylesheets().add("stylesheet.css");
        
        Stage secondStage = new Stage();
        
        FXErrorController controller = (FXErrorController)loader.getController();
        controller.setStage(secondStage);
        controller.setMessageText(message);
        controller.setDetailsText(details);
        
        secondStage.setTitle(windowTitle);
        
        secondStage.setScene(scene);
        //Set position of second window, related to primary window.
        secondStage.setX(primaryStage.getX() + 250);
        secondStage.setY(primaryStage.getY() + 100);

        secondStage.show();

	}
}
