package gate;
import core.Complex;
import core.Qubit;
import core.State;

/**
 * The C-NOT gate is a 2-qubit gate.
 * It can be represented as a pair of 1 qubit applications
 * @author Connor Imrie
 *
 */
public class CNOT implements TwoQubitGate{

	@Override
	public State[2] actOn(Qubit x, Qubit y) {
		int newY;
		if (x.getQubitType() == 0){
			if (y.getQubitType() == 0){
				newY = 0;
			}
			else {
				newY = 1;
			}
		}
		else {
			newY = 1;
		}
		
		State xState = new State(x);
		State yState = new State(y);
		State[] returnStates = {xState, yState};
		//returns state of 
		return returnStates;
	}
	
}
