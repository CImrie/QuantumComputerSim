package FX;

import java.io.IOException;

import FX.Controller.FXGUIController;
import javafx.application.Application;
import javafx.fxml.FXMLLoader;
import javafx.scene.Parent;
import javafx.scene.Scene;
import javafx.stage.Stage;

/**
 *
 * @author Connor
 */
public class FXGUI extends Application {
    private Stage stage;
    
    @Override
    public void start(Stage primaryStage) throws IOException { 
        stage = primaryStage;
        FXMLLoader loader = new FXMLLoader(FXGUIController.class.getResource("/mailFX/Controller/first.fxml"));
        Parent root = (Parent)loader.load();
        FXGUIController controller = (FXGUIController)loader.getController();
        controller.setStage(primaryStage);
        Scene scene = new Scene(root);
    
        stage.setTitle("IMAP Mail Migration");
        stage.setScene(scene);
        stage.show();
    }

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        launch(args);
    }


    
}
